<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:id="rootVBox"
      fx:controller="com.example.software.view.AIViewController"
      styleClass="ai-dialog" prefWidth="800" prefHeight="600">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header with AI title and close button -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label fx:id="aiTitleLabel" text="AI" styleClass="ai-dialog-header"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="aiCloseButton" text="✕" styleClass="ai-close-button"/>
    </HBox>

    <!-- Message Container (ScrollPane) -->
    <ScrollPane fx:id="messageScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="ai-message-list" hbarPolicy="NEVER">
        <VBox fx:id="messageContainer" spacing="15"/>
    </ScrollPane>

    <!-- Quick Actions -->
    <HBox fx:id="quickActionsContainer" spacing="10" alignment="CENTER_LEFT">
        <padding>
            <Insets top="15" bottom="15"/>
        </padding>
    </HBox>

    <!-- Input Area -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="aiInputField" promptText="Ask anything..." styleClass="ai-input-field" HBox.hgrow="ALWAYS"/>
        <Button fx:id="aiSendButton" text="➤" styleClass="ai-send-button"/>
    </HBox>

    <stylesheets>
        <URL value="@/styles/ai.css"/>
    </stylesheets>
</VBox>
